#!/bin/bash


pidof spotify | xargs -n 99 kill -9
pidof dbus-daemon | xargs -n 99 kill -9

dbus-launch > "$HOME/.env"
cat >> "$HOME/.env" <<EOF
export DISPLAY=:10
export DBUS_SESSION_BUS_ADDRESS
export DBUS_SESSION_BUS_PID
export DBUS_SESSION_BUS_WINDOWID
EOF

source "$HOME/.env"
exec /usr/bin/spotify
